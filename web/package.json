{
  "name": "@storyteller/web",
  "version": "0.4.49",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/database/migrate.ts && yarn dev:worker && STORYTELLER_WORKER=worker.js PORT=8001 next dev --turbopack",
    "dev:worker": "esbuild src/work/worker.ts --bundle --platform=node --packages=external --sourcemap=inline --format=esm --outdir=work-dist/",
    "test": "STORYTELLER_DATA_DIR=src/__fixtures__/__output__ tsx --test",
    "test:watch": "STORYTELLER_DATA_DIR=src/__fixtures__/__output__ tsx --test --watch",
    "test:all": "STORYTELLER_DATA_DIR=src/__fixtures__/__output__ tsx --test src/__tests__/*.test.ts src/*/__tests__/*.test.ts",
    "build": "yarn build:worker && yarn build:migrate && next build",
    "build:worker": "esbuild src/work/worker.ts --bundle --platform=node --loader:.node=file --sourcemap=inline --format=cjs --external:winax --external:@echogarden/vosk --out-extension:.js=.cjs --define:import.meta.url=import_meta_url --inject:./src/work/import.meta.url-polyfill.js --outdir=work-dist/",
    "build:migrate": "esbuild src/database/migrate.ts --bundle --platform=node --loader:.node=file --sourcemap=inline --format=cjs --out-extension:.js=.cjs --define:import.meta.url=import_meta_url --inject:./src/work/import.meta.url-polyfill.js --outdir=migrate-dist/",
    "start": "node migrate-dist/migrate.cjs && node server.js"
  },
  "dependencies": {
    "@ariakit/react": "^0.4.1",
    "@echogarden/espeak-ng-emscripten": "^0.3.3",
    "@smoores/epub": "workspace:*",
    "@smoores/fs": "workspace:*",
    "@zip.js/zip.js": "^2.7.40",
    "argon2": "^0.40.1",
    "axios": " 1.6.7",
    "better-sqlite3": "^11.1.2",
    "busboy": "^1.6.0",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "echogarden": "^2.0.7",
    "jsonwebtoken": "^9.0.2",
    "match-sorter": "^6.3.4",
    "memoize": "^10.0.0",
    "mime-types": "^2.1.35",
    "music-metadata": "^7.14.0",
    "next": "15.0.3",
    "nodemailer": "^6.9.13",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "piscina": "^4.4.0",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "sharp": "^0.33.2",
    "simple-git": "^3.25.0",
    "tsx": "^4.7.2",
    "wink-eng-lite-web-model": "^1.8.0",
    "wink-nlp": "^2.3.0"
  },
  "packageManager": "yarn@4.1.1",
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/busboy": "^1",
    "@types/jsonwebtoken": "^9",
    "@types/mime-types": "^2",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "esbuild": "^0.23.0",
    "typescript": "^5.4.3",
    "typescript-plugin-css-modules": "^5.0.1"
  }
}
